{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve"
  },
  "include": ["src", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "assets", ".storybook"]
}
